        let mySelectedListItems = [];

        // const sum = document.getElementById('sum');
        const select = document.querySelector('#bla1');

        function onSelect(e) {
            if (e.target.checked === true) {
                console.log(e.target.value);
                select.insertAdjacentHTML("beforeend",
                    `<label>Количество ${e.target.name} </label><input type = "number" name = "quantities"  id="test_${e.target.value}" min="0" step="0.001" class="to_sum" required><input type="hidden" name="products" value="${e.target.value}">`);
            }
            else {
                var el = document.getElementById(`test_${e.target.value}`);
                 console.log(el);
                $(el).prev().remove();
                el.parentNode.removeChild(el);
            }
        }
        function handleCB() {
            mySelectedListItems = [];
            chBoxes.forEach((checkbox) => {

                if (checkbox.checked) {
                    mySelectedListItems.push(checkbox.value);
                }
            });
        }

        chBoxes.forEach((checkbox) => {
            checkbox.addEventListener('change', handleCB);
            
        });
